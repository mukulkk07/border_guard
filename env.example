# border-guard Environment Configuration Template
# Copy to .env and customize for your environment

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=sqlite:///./border_guard.db
# For PostgreSQL: postgresql://user:password@localhost:5432/border_guard
# For MySQL: mysql+pymysql://user:password@localhost:3306/border_guard

DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# ============================================================================
# QUARANTINE CONFIGURATION
# ============================================================================
QUARANTINE_ENABLED=true
QUARANTINE_PATH=./quarantine
QUARANTINE_RETENTION_DAYS=30
QUARANTINE_AUTO_CLEANUP=true
QUARANTINE_COMPRESSION=gzip
# Options: gzip, zip, none

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
MONITORING_ENABLED=true
BASELINE_LOOKBACK_DAYS=30
ANOMALY_DETECTION_ENABLED=true
ANOMALY_ZSCORE_THRESHOLD=3.0
ANOMALY_PERCENTAGE_THRESHOLD=0.20
CHECK_INTERVAL_SECONDS=300

# ============================================================================
# ALERTING CONFIGURATION
# ============================================================================
ALERTING_ENABLED=true
ALERT_CHANNELS=stdout,slack,email
# Options: stdout, email, slack, webhook, pagerduty
# Multiple: comma-separated

ALERT_DEFAULT_CHANNEL=stdout

# Slack Configuration
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration
ALERT_EMAIL_RECIPIENTS=team@company.com,admin@company.com
ALERT_EMAIL_SENDER=border-guard@company.com
ALERT_SMTP_SERVER=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_SMTP_USERNAME=your-email@gmail.com
ALERT_SMTP_PASSWORD=your-app-password

# PagerDuty Configuration
ALERT_PAGERDUTY_KEY=your-pagerduty-api-key

# Webhook Configuration
ALERT_WEBHOOK_URL=https://your-webhook-endpoint.com/incidents

# ============================================================================
# VALIDATION CONFIGURATION
# ============================================================================
STRICT_TYPE_CHECKING=true
ALLOW_NULL_REQUIRED=false
TRIM_STRING_VALUES=false
COERCE_NUMERIC_TYPES=false
MAX_VIOLATIONS_REPORT=100

# ============================================================================
# API SERVER CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
DEBUG=false
CORS_ORIGINS=*

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

LOG_FILE=./logs/border-guard.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ============================================================================
# LINEAGE CONFIGURATION
# ============================================================================
LINEAGE_ENABLED=true
LINEAGE_AUTO_DISCOVER=false
LINEAGE_MAX_DEPTH=10
LINEAGE_CACHE_TTL=3600

# ============================================================================
# DEVELOPMENT/TESTING
# ============================================================================
ENVIRONMENT=development
# Options: development, staging, production

SECRET_KEY=your-secret-key-change-in-production
